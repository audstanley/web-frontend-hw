{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ],
    "firestore": {
      "indexes": "firestore.indexes.json"
    },
    "emulators": {
      "hosting": {
        "host": "HOST",
        "port": "5500"
      }
    }
  }
}
